<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    android:weightSum="1"
    tools:context=".FoodActivity">

  <ImageView android:id="@+id/photo"
      android:layout_width="fill_parent"
      android:layout_height="150dp"
      android:layout_weight="0.04" />

  <TextView android:id="@+id/description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <TextView android:id="@+id/name"
      android:layout_width="match_parent"
            android:layout_height="wrap_content" />

  <TextView android:id="@+id/url"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <TextView android:id="@+id/phone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <TextView android:id="@+id/delivery_time"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <TextView android:id="@+id/free_delivery_time"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <TextView android:id="@+id/free_delivery_from"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <TextView android:id="@+id/free_delivery_with_card"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <TextView android:id="@+id/card_pay"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <TextView android:id="@+id/logo_url"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <TextView android:id="@+id/rating"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

</LinearLayout>
